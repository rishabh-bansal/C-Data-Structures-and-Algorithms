#include <iostream>
using namespace std;
/*note that interpolation search works on sorted array*/
int interpolationsearch(int arr[],int n,int element)
{
    int low = 0;
    int high = n - 1;
    while(low<=high && element>=arr[low] && element<=arr[high])
    {
        int pos = low + (((double)(high-low) /
			(arr[high]-arr[low]))*(element - arr[low])); //calculate pos

        if(arr[pos]==element)
        {
            return pos;//return index of the element found that is pos
        }

        if(arr[pos]<element)
        {
            low = pos + 1;//element is in upper part
        }

        else
        {
            high = pos - 1;//element is in lower part
        }
    }
    return -1;//element not found


}
int main()
{
    cout<<"Enter the size of array"<<endl;
    int n ;
    cin>>n;
    int arr[100];
    cout<<"Enter the elements of array"<<endl;
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    cout<<"Enter the element"<<endl;
    int element;
    cin>>element;
    cout<<"The given element is at index "<<interpolationsearch(arr,n,element)<<endl;
    return 0;
}
